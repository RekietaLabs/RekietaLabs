  <script>
    window.addEventListener('scroll', function() {
      var banner = document.getElementById('topBanner');
      if (window.scrollY > 50) {
        banner.classList.add('visible');
      } else {
        banner.classList.remove('visible');
      }
    });

    // Print models data
    const prints = {
      "Ammo themed container": {
        description: "This 3D print is a container themed around ammo. The price is $15.",
        imageUrls: ["image0.jpeg", "image1.jpeg"]
      },
      "Corkscrew shaped tree": {
        description: "This 3D print is a unique corkscrew-shaped tree. The price is $20.",
        imageUrls: ["Tree1.jpeg", "Tree2.jpeg"]
      },
      "Dragons": {
        description: "This 3D print is a beautifully detailed dragon. The price is $25.",
        imageUrls: ["Dragon1.jpeg", "Dragon2.jpeg"]
      },
      "Dragon eggs": {
        description: "This 3D print is a toy dragon egg that hatches to reveal a baby dragon inside. It's customizable and the price is $15.",
        imageUrls: ["Egg1.jpg", "Egg2.jpg"]
      },
      "Signs": {
        description: "This 3D print is a customizable sign. You can add text or images. The price varies between $10-12.",
        imageUrls: ["Sign1.jpg", "Sign2.jpg", "Sign3.jpg"]
      },
      "Rocket launcher": {
        description: "This 3D print is a fun little toy for all ages. Make sure to only use it outside, as it could break something inside. The price is $10.",
        imageUrls: ["IMG_1639.jpeg", "IMG_1637.jpeg"]
      }
    };

    const printSelect = document.getElementById('printSelect');
    const printDetails = document.getElementById('printDetails');

    printSelect.addEventListener('change', function() {
      const selectedPrint = printSelect.value;
      const printInfo = prints[selectedPrint];

      if (printInfo) {
        printDetails.innerHTML = `
          <p>${printInfo.description}</p>
          <div class="print-images">
            ${printInfo.imageUrls.map(url => `<img src="${url}" alt="${selectedPrint}" />`).join('')}
          </div>
        `;
      } else {
        printDetails.innerHTML = '';
      }
    });
  </script>
